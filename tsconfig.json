{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "outDir": "./dist",
      "noFallthroughCasesInSwitch": true,
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "isolatedModules": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}